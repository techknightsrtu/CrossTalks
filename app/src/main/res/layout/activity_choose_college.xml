<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screenBackground"
    tools:context=".activity.auth.ChooseCollegeActivity">

    <TextView
        android:id="@+id/tvChooseCollege"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="22sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/mont_semibold"/>

    <ImageView
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvChooseCollege"
        android:layout_above="@id/lCollegeName"
        android:src="@drawable/ic_choose_college_illu"
        android:layout_centerHorizontal="true"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/lCollegeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select your college"
        android:layout_centerInParent="true"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusTopStart="8dp"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        android:layout_margin="16dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">

        <AutoCompleteTextView
            android:id="@+id/atvCollegeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:textSize="14sp"
            android:maxLines="3"
            android:textColor="@color/white"
            android:fontFamily="@font/mont_light"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Spinner
        android:id="@+id/spCollege"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="16dp"
        android:backgroundTint="@color/white"
        android:paddingLeft="8dp"
        android:gravity="center"
        android:visibility="gone"
        android:popupBackground="@android:color/white"
        android:scrollbars="none"
        android:spinnerMode="dropdown" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:onClick="noCollege"
        android:gravity="center"
        android:layout_above="@id/btSelectCollege"
        android:background="@drawable/button_bg_fill_stroke_round">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not a College/School Student"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/mont_regular"
            android:drawableStart="@drawable/ic_round_error_outline_24_red"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"/>

    </LinearLayout>

    <TextView
        android:id="@+id/btSelectCollege"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Next"
        android:textColor="@color/white"
        android:gravity="center"
        android:padding="16dp"
        android:fontFamily="@font/mont_regular"
        android:textAllCaps="false"
        android:onClick="selectCollege"
        android:layout_alignParentBottom="true"
        android:background="@drawable/red_bg_fill_round"/>

</RelativeLayout>