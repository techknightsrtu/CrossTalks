<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/gray_fill_rounded_8dp"
        android:orientation="vertical">

        <View
            android:layout_width="40dp"
            android:layout_height="6dp"
            android:background="@drawable/gray_fill_rounded_8dp"
            android:backgroundTint="@color/dark_1"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"/>

        <EditText
            android:id="@+id/etCollegeSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/colorPrimary"
            android:hint="Search for your college ..."
            android:textColor="@color/white"
            android:inputType="text"
            android:textColorHint="@color/gray_text_color"
            android:fontFamily="@font/mont_light"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="College Not Listed?"
            android:textAllCaps="false"
            android:backgroundTint="@color/screenBackground"
            android:fontFamily="@font/mont_regular"/>

        <Button
            android:id="@+id/btNotAStudent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="I'm Not a Student"
            android:textAllCaps="false"
            android:fontFamily="@font/mont_regular"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/gray_filled_top_corners_8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/choose_college"
            android:padding="4dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:fontFamily="@font/mont_regular"/>

        <ListView
            android:id="@+id/lvCollege"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvNoCollegeFound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:gravity="center"
            android:textColor="@color/gray_text_color"
            android:text="No College found. ðŸ˜•"
            android:fontFamily="@font/mont_light"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>