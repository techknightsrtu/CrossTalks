<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screenBackground"
    tools:context=".activity.auth.ChooseAvatarActivity">

    <TextView
        android:id="@+id/tvChooseAvatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:fontFamily="@font/mont_semibold"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_marginTop="24dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/ivUserAvatar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/tvAvatarName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/mont_regular"
            android:layout_marginTop="24dp"
            android:textSize="20sp"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_above="@id/btSelectCollege"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/button_bg_fill_stroke_round"
        android:gravity="center"
        android:onClick="newProfile"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/ivGenerateNewAvatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_round_autorenew_24_red"
            android:layout_marginEnd="8dp"
            />

        <TextView
            android:id="@+id/btCollegeNotListed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generate New Avatar"
            android:fontFamily="@font/mont_regular"
            android:gravity="center_vertical"
            android:textColor="@color/colorPrimary"
            android:textAllCaps="false"/>

    </LinearLayout>

    <TextView
        android:id="@+id/btSelectCollege"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Register"
        android:textColor="@color/white"
        android:gravity="center"
        android:padding="16dp"
        android:onClick="createChatProfile"
        android:fontFamily="@font/mont_regular"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:background="@drawable/red_bg_fill_round"/>

</RelativeLayout>