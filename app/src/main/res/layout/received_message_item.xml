<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="120dp"
        android:layout_marginStart="16dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/sended_message_bg_fill_round">

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rvDirectReply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/direct_reply_message_bg">
            <TextView
                android:id="@+id/tvDirectReplyMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This is a demoefeege"
                android:visibility="visible"
                android:textSize="12sp"
                android:padding="12dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:autoLink="all"
                android:textColor="@color/white"
                android:fontFamily="@font/mont_light"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is a message"
            android:padding="12dp"
            android:autoLink="all"
            android:textColor="@color/white"
            android:fontFamily="@font/mont_light"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvTimeStamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll1"
        android:text="00:00 am, 2 Sep"
        android:textSize="10sp"
        android:visibility="gone"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:paddingStart="16dp"
        android:textStyle="italic"
        android:fontFamily="@font/mont_light"
        android:textColor="@color/gray_text_color"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"/>

    <TextView
        android:id="@+id/tvMsgSeen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTimeStamp"
        android:text="Seen"
        android:textSize="10sp"
        android:visibility="gone"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:paddingStart="16dp"
        android:textStyle="italic"
        android:fontFamily="@font/mont_light"
        android:textColor="@color/gray_text_color"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"/>

</RelativeLayout>